rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function getRoleForPartner(partnerId) {
      return getUserData().partnerRoles[partnerId];
    }

    function isEjkUser() {
      // Security hardening: Even if isEjkUser is true, ensure they don't have a pending EJK role.
      // This prevents "pending" EJK users from seeing everything if the flag was set prematurely.
      // We assume if they have isEjkUser=true, they should have a role. If that role is pending*, deny.
      // EJK roles are prefixed with "EJK_" in the `roles` array.
      return getUserData().isEjkUser == true && 
             !getUserData().roles.hasAny(['EJK_pending', 'EJK_pending_inspector']);
    }

    function isEkvUser() {
      return getUserData().isEkvUser == true;
    }

    function isAnAdmin() {
      return getUserData().roles.hasAny(['EJK_admin', 'ENY_admin', 'ENY_pendingAdmin']);
    }

    // ÚJ FÜGGVÉNY: Ellenőrzi, hogy a felhasználó EJK admin, EJK író vagy ÉRVÉNYES SZEREPKÖRREL rendelkezik.
    function canWriteInspection(partnerId) {
      return getUserData().roles.hasAny(['EJK_admin', 'EJK_write']) || 
             (isEkvUser() && getRoleForPartner(partnerId) in ['inspector', 'subcontractor', 'subscriber']);
    }

    match /users/{userId} {
      allow read: if isAnAdmin() || request.auth.uid == userId || isEjkUser();
      allow write: if request.auth.uid == userId || isAnAdmin() || isEjkUser();
    }

    match /partners/{partnerId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null;
      allow update: if isEjkUser() || getRoleForPartner(partnerId) in ['admin', 'write'];
      allow delete: if false;
    }

    match /partners/{partnerId}/devices/{deviceId} {
      allow read, list: if isEjkUser() || (isEkvUser() && resource.data.isI == true) || getRoleForPartner(partnerId) != null;
			allow write: if isEjkUser() || getRoleForPartner(partnerId) == 'admin' || getRoleForPartner(partnerId) == 'write' || getRoleForPartner(partnerId) == 'inspector' || getRoleForPartner(partnerId) == 'subcontractor';
    }

    // VÉGLEGES SZABÁLY, IDEIGLENESEN KIBŐVÍTVE A MIGRÁCIÓHOZ
		match /partners/{partnerId}/devices/{deviceId}/inspections/{inspectionId} {
  		allow create, update: if canWriteInspection(partnerId) || request.auth.token.email == 'attila.hitb@gmail.com';
  		allow read, list: if isEjkUser() || getRoleForPartner(partnerId) != null;
			allow delete: if canWriteInspection(partnerId) && resource.data.status == 'draft';
		}

    // ÚJ SZABÁLY: Engedélyezi a 'collectionGroup' lekérdezést az 'inspections' kollekcióra.
    // Ez szükséges a "Piszkozatok" oldal működéséhez (EJK userek),
    // és a véglegesített jegyzőkönyvek olvasásához (minden partner user).
    match /{path=**}/inspections/{inspectionId} {
      allow read: if isEjkUser() || 
                    (isEkvUser() && (resource.data.finalizedByUid == request.auth.uid || resource.data.createdByUid == request.auth.uid)) || 
                    (resource.data.status == 'finalized' && getRoleForPartner(resource.data.partnerId) != null);
    }
    
      // ÚJ SZABÁLY: Szakértők kollekció olvasása
    match /experts/{expertId} {
      allow read, list: if request.auth != null;
    }

  }
}





